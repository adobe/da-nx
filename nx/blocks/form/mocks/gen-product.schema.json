{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/product.schema.json",
  "title": "Product",
  "type": "object",
  "required": [
    "id",
    "name",
    "pricing",
    "inventory",
    "status",
    "createdAt"
  ],
  "properties": {
    "id": {
      "type": "string"
    },
    "sku": {
      "type": "string"
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "slug": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "category": {
      "type": "object",
      "required": [
        "id",
        "name"
      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "brand": {
      "type": "object",
      "required": [
        "id",
        "name"
      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "pricing": {
      "type": "object",
      "required": [
        "currency",
        "price"
      ],
      "properties": {
        "currency": {
          "type": "string",
          "minLength": 3,
          "maxLength": 3
        },
        "price": {
          "type": "number",
          "minimum": 0
        },
        "salePrice": {
          "type": "number",
          "minimum": 0
        },
        "taxIncluded": {
          "type": "boolean"
        }
      },
      "additionalProperties": false
    },
    "inventory": {
      "type": "object",
      "required": [
        "quantity",
        "status"
      ],
      "properties": {
        "quantity": {
          "type": "integer",
          "minimum": 0
        },
        "status": {
          "type": "string",
          "enum": [
            "in_stock",
            "out_of_stock",
            "preorder",
            "discontinued"
          ]
        },
        "warehouseLocation": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "attributes": {
      "type": "object",
      "additionalProperties": {
        "type": [
          "string",
          "number",
          "boolean"
        ]
      }
    },
    "images": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "url"
        ],
        "properties": {
          "url": {
            "type": "string",
            "format": "uri"
          },
          "alt": {
            "type": "string"
          },
          "isPrimary": {
            "type": "boolean"
          }
        },
        "additionalProperties": false
      }
    },
    "variants": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "pricing",
          "inventory"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "sku": {
            "type": "string"
          },
          "attributes": {
            "type": "object",
            "additionalProperties": {
              "type": [
                "string",
                "number",
                "boolean"
              ]
            }
          },
          "pricing": {
            "$ref": "#/properties/pricing"
          },
          "inventory": {
            "$ref": "#/properties/inventory"
          }
        },
        "additionalProperties": false
      }
    },
    "dimensions": {
      "type": "object",
      "properties": {
        "weight": {
          "type": "number",
          "minimum": 0
        },
        "unit": {
          "type": "string"
        },
        "length": {
          "type": "number",
          "minimum": 0
        },
        "width": {
          "type": "number",
          "minimum": 0
        },
        "height": {
          "type": "number",
          "minimum": 0
        }
      },
      "additionalProperties": false
    },
    "status": {
      "type": "string",
      "enum": [
        "active",
        "inactive",
        "draft"
      ]
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "createdAt": {
      "type": "string",
      "format": "date-time"
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time"
    }
  },
  "additionalProperties": false
}