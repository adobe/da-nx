{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Inline Test (No $defs)",
  "description": "A test schema using inline definitions without $ref/$defs to verify JSON Schema spec compliance",
  "type": "object",
  "required": [
    "name",
    "email"
  ],
  "properties": {
    "name": {
      "type": "string",
      "title": "Full Name",
      "minLength": 1
    },
    "email": {
      "type": "string",
      "title": "Email Address",
      "format": "email",
      "minLength": 1
    },
    "age": {
      "type": "integer",
      "title": "Age",
      "minimum": 0,
      "maximum": 150
    },
    "subscribe": {
      "type": "boolean",
      "title": "Subscribe to Newsletter"
    },
    "interests": {
      "type": "array",
      "title": "Interests (Array of Primitives)",
      "description": "Simple array of strings",
      "items": {
        "type": "string",
        "title": "Interest"
      }
    },
    "tags": {
      "type": "array",
      "title": "Tags (Array of Numbers)",
      "description": "Array of numeric tags",
      "items": {
        "type": "number",
        "title": "Tag ID"
      }
    },
    "contacts": {
      "type": "array",
      "title": "Contacts (Array of Objects)",
      "description": "Array of contact objects - inline definition",
      "items": {
        "type": "object",
        "title": "Contact",
        "properties": {
          "name": {
            "type": "string",
            "title": "Contact Name"
          },
          "phone": {
            "type": "string",
            "title": "Phone Number"
          },
          "relationship": {
            "type": "string",
            "title": "Relationship",
            "enum": [
              "Family",
              "Friend",
              "Colleague",
              "Other"
            ]
          }
        }
      }
    },
    "skillCategories": {
      "type": "array",
      "title": "Skill Categories (Array of Arrays)",
      "description": "Each category contains an array of skills",
      "items": {
        "type": "array",
        "title": "Skills in Category",
        "items": {
          "type": "string",
          "title": "Skill"
        }
      }
    },
    "preferences": {
      "type": "object",
      "title": "Preferences (Nested Object)",
      "description": "Object with nested properties - inline definition",
      "properties": {
        "theme": {
          "type": "string",
          "title": "Theme",
          "enum": [
            "Light",
            "Dark",
            "Auto"
          ]
        },
        "notifications": {
          "type": "object",
          "title": "Notification Settings",
          "properties": {
            "email": {
              "type": "boolean",
              "title": "Email Notifications"
            },
            "push": {
              "type": "boolean",
              "title": "Push Notifications"
            },
            "frequency": {
              "type": "string",
              "title": "Frequency",
              "enum": [
                "Immediate",
                "Daily",
                "Weekly"
              ]
            }
          }
        },
        "language": {
          "type": "string",
          "title": "Language",
          "enum": [
            "English",
            "Spanish",
            "French",
            "German"
          ]
        }
      }
    },
    "metadata": {
      "type": "object",
      "title": "Metadata (Deep Nesting)",
      "description": "Object with deeply nested objects",
      "properties": {
        "created": {
          "type": "string",
          "title": "Created Date",
          "format": "date"
        },
        "author": {
          "type": "object",
          "title": "Author",
          "properties": {
            "id": {
              "type": "string",
              "title": "Author ID"
            },
            "name": {
              "type": "string",
              "title": "Author Name"
            },
            "email": {
              "type": "string",
              "title": "Email",
              "format": "email"
            }
          }
        },
        "tags": {
          "type": "object",
          "title": "Tag Metadata",
          "properties": {
            "primary": {
              "type": "string",
              "title": "Primary Tag"
            },
            "secondary": {
              "type": "array",
              "title": "Secondary Tags",
              "items": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "biography": {
      "type": "string",
      "title": "Biography",
      "x-semantic-type": "long-text",
      "description": "Long text field using custom semantic type"
    }
  }
}
